{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}